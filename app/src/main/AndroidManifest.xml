<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.neu.madcourse.yongqichao">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AboutActivity" />
        <activity android:name=".DictionaryActivity" />
        <activity android:name=".Acknowledgements" />
        <activity android:name=".WordgameActivity" />
        <activity android:name=".WordgameFragment" />
        <activity android:name=".WordgamePlay"
            android:screenOrientation="portrait"/>
        <activity android:name=".WordgamePlayFragment" />
        <activity android:name=".WordgameControlFragment" />
        <activity android:name=".WordgameTile"></activity>
    </application>

</manifest>