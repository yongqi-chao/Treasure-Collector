<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.neu.madcourse.yongqichao">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AboutActivity" />
        <activity android:name=".DictionaryActivity" />
        <activity android:name=".Acknowledgements" />
        <activity android:name=".WordgameActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".WordgamePlay"
            android:screenOrientation="portrait"></activity>
    </application>

    <service android:name='.WordGameMessagingService'>
        <intent-filter>
            <action android:name='com.google.android.firebase.MESSAGING_EVENT'></action>
        </intent-filter>
    </service>
    <service android:name='.WordGameInstanceIDService'>
        <intent-filter>
            <action android:name='com.google.android.firebase.INSTANCE_ID_EVENT'></action>
        </intent-filter>
    </service>

</manifest>